<div class="comment_item">
	<h4>
		<%= comment.name %> said:
	</h4>
	<%= simple_format comment.body %>

	<div class="input-group">
		<div class="input-group-addon">Sent <b><%= time_ago_in_words comment.created_at %></b> ago</div>
		<% if current_company == @job.company %>
			<%= button_to comment_path(comment), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-radius-right' do %>
				<i class="glyphicon glyphicon-trash"></i> Delete
			<% end %>
		<% else %>
			<%= link_to root_path, class: 'btn btn-default btn-radius-right', disabled: 'disabled' do %>
				<i class="glyphicon glyphicon-time"></i>
			<% end %>
		<% end %>
	</div>
</div>
