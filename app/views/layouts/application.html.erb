<!DOCTYPE html>
<html>
	<head>
		<title>JobBoard</title>
		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<header class="navbar navbar-inverse navbar-static-top bs-docs-nav" id="top" role="banner">
			<div class="container">
				<div class="navbar-header">
					<button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a href="../" class="navbar-brand"><%= t("menu.job_board") %></a>
				</div>
				<nav class="collapse navbar-collapse bs-navbar-collapse">
					<ul class="nav navbar-nav">
						<li>
							<%= link_to t("menu.premium_jobs"), root_path %>
						</li>
						<li>
							<%= link_to t("menu.all_jobs"), jobs_path %>
						</li>
						<% if current_company %>
							<li>
								<%= link_to t("menu.new_job"), new_job_path %>
							</li>
							<li>
								<%= link_to t("menu.new_company"), new_company_path %>
							</li>
						<% end %>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<% if current_company %>
							<li>
								<a href="#"><%= t("menu.logged.as", username: current_company.name) %></a>
							</li>
							<li>
								<%= link_to t("menu.logout"), logout_path %>
							</li>
							<% else %>
							<li>
								<%= link_to t("menu.login"), login_path, id: 'btn-login-menu' %>
							</li>
						<% end %>
					</ul>
					<ul class="nav navbar-nav navbar-right">
					  	<li>
					  		<a id="btn-to-english" href="?locale=en">
					  			<img src="/static/img/usa-flag.png" style="height: 20px;"/>
					  		</a>
					  	</li>
					  	<li>
					  		<a id="btn-to-portuguese" href="?locale=pt-BR">
					  			<img src="/static/img/br-flag.png" style="height: 20px;"/>
					  		</a>
					  	</li>
					</ul>
				</nav>
			</div>
		</header>

		<div class="container">
			<% if notice %>
				<p id="notice" class="alert alert-info">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					  <span aria-hidden="true">&times;</span>
					</button>
					<%= notice %>
				</p>
			<% end %>
			<% if alert %>
				<p id="alert" class="alert alert-warning">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					  <span aria-hidden="true">&times;</span>
					</button>
					<%= alert %>
				</p>
			<% end %>
			<%= yield %>
		</div>

		<%= javascript_include_tag 'application' %>
		<script src="/static/bootstrap-switch.js"></script>
		<script>
			$(document).ready(function(){
				$("input[type=checkbox]").bootstrapSwitch();
			});
		</script>
	</body>
</html>
