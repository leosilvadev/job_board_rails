<!DOCTYPE html>
<html>
	<head>
		<title>JobBoard</title>
		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<header class="navbar navbar-inverse navbar-static-top bs-docs-nav" id="top" role="banner">
			<div class="container">
				<div class="navbar-header">
					<button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a href="../" class="navbar-brand">Job Board</a>
				</div>
				<nav class="collapse navbar-collapse bs-navbar-collapse">
					<ul class="nav navbar-nav">
						<li>
							<%= link_to "Premium Jobs", root_path %>
						</li>
						<li>
							<%= link_to "All Jobs", jobs_path %>
						</li>
						<% if current_company %>
							<li>
								<%= link_to "New Job", new_job_path %>
							</li>
							<li>
								<%= link_to "New company", new_company_path %>
							</li>
						<% end %>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<% if current_company %>
							<li>
								<a href="#">Logged as <%= current_company.name %></a>
							</li>
							<li>
								<%= link_to 'Logout', logout_path %>
							</li>
							<% else %>
							<li>
								<%= link_to "Login", login_path %>
							</li>
						<% end %>
					</ul>
				</nav>
			</div>
		</header>

		<div class="container">
			<% if notice %>
				<p id="notice" class="alert alert-info">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					  <span aria-hidden="true">&times;</span>
					</button>
					<%= notice %>
				</p>
			<% end %>
			<% if alert %>
				<p id="alert" class="alert alert-warning">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					  <span aria-hidden="true">&times;</span>
					</button>
					<%= alert %>
				</p>
			<% end %>
			<%= yield %>
		</div>

		<%= javascript_include_tag 'application' %>
		<script src="/static/bootstrap-switch.js"></script>
		<script>
			$(document).ready(function(){
				$("input[type=checkbox]").bootstrapSwitch();
			});
		</script>
	</body>
</html>
